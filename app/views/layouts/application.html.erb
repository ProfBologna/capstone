<!DOCTYPE html>
<html>
  <head>
    <title>Capstone</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>


<nav class="navbar navbar-inverse">
  <% if current_user %>
  <a class="navbar-brand" href="/games">Room Game</a>
  <% else %>
  <a class="navbar-brand" href="/">Room Game</a>
  <% end %>
    <ul class="nav navbar-nav">
      <li><a href="/login">Login</a></li>
      <li><a href="/logout">Logout</a></li>
      <li><a href="/signup">Sign Up</a></li>
    <% if current_user %> 
      <%= form_tag "/games", method: :post do %>
        <%= hidden_field_tag :user_id, current_user.id %>
        <%= hidden_field_tag :room_id   %>
        <input type="submit" value="Create New Game">
        <li><a href="/games">Load Game</a></li>
      <% end %>
    <% end %>
    </ul>
  <ul class="nav navbar-nav navbar-right">
    <li><a href="#"><%= current_user && current_user.name %></a></li>
  </ul>
</nav>

    <%= yield %>
  </body>
</html>
